<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">

  <display-name>PicketLink Sales Service Provider</display-name>

  <description>PicketLink Service Provider With a Basic Configuration using SAML HTTP POST Binding</description>
    
    <!-- Welcome page -->
  <welcome-file-list>
    <welcome-file>index.xhtml</welcome-file>
  </welcome-file-list>

  <!-- Register Faces Servlet for *.xhtml -->
  <servlet>
    <servlet-name>FacesServlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>FacesServlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>

	<!-- Define a Security Constraint on this Application -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Service Provider 1</web-resource-name>
      <url-pattern>/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>manager</role-name>
    </auth-constraint>
  </security-constraint>

	<!-- Define a security constraint that gives unlimted access to freezone -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>images</web-resource-name>
      <url-pattern>/resources/images/*</url-pattern>
    </web-resource-collection>
  </security-constraint>

   <!-- Define the Login Configuration for this Application -->
    <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>Tomcat SALES Application</realm-name>
    <form-login-config>
      <form-login-page>/sites/login.xhtml</form-login-page>
      <form-error-page>/sites/login-error.xhtml</form-error-page>
    </form-login-config>
  </login-config>

	<!-- Security roles referenced by this web application -->
  <security-role>
    <description>The role that is required to log in to the Manager Application</description>
    <role-name>manager</role-name>
  </security-role>
</web-app>
